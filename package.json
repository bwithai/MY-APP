{
  "name": "frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Command Fund Managment System",
  "author": {
    "name": "Local User",
    "email": "local@example.com"
  },
  "homepage": "http://localhost:5173",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "lint": "biome check --apply-unsafe --no-errors-on-unmatched --files-ignore-unknown=true ./",
    "preview": "vite preview",
    "generate-client": "openapi-ts",
    "electron": "electron electron.cjs",
    "electron-build": "electron-builder"
  },
  "main": "electron.cjs",
  "dependencies": {
    "@chakra-ui/icons": "2.1.1",
    "@chakra-ui/react": "^2.10.4",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@tanstack/react-query": "^5.28.14",
    "@tanstack/react-query-devtools": "^5.28.14",
    "@tanstack/react-router": "^1.19.1",
    "axios": "1.7.4",
    "chart.js": "^4.4.7",
    "date-fns": "^4.1.0",
    "decimal.js": "^10.4.3",
    "form-data": "4.0.0",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-date-range": "^2.0.1",
    "react-datepicker": "^7.6.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.13",
    "react-hook-form": "7.49.3",
    "react-icons": "^5.0.1",
    "recharts": "^2.15.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.1",
    "@electron/remote": "^2.1.2",
    "@hey-api/openapi-ts": "^0.57.0",
    "@playwright/test": "^1.45.2",
    "@tanstack/router-devtools": "1.19.1",
    "@tanstack/router-vite-plugin": "1.19.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.37",
    "@types/react-date-range": "^1.4.9",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-legacy": "^5.0.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "dotenv": "^16.4.5",
    "electron": "22.3.27",
    "electron-builder": "23.6.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.13"
  },
  "build": {
    "fileAssociations": [
      {
        "ext": "html",
        "name": "Custom Browser",
        "role": "Viewer"
      }
    ],
    "appId": "com.commandfund.frontend",
    "productName": "commandfundmanagement",
    "directories": {
      "output": "dist-electron"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "executableName": "commandfundmanagement",
      "target": [
        "deb"
      ],
      "category": "Utility",
      "desktop": {
        "Name": "commandfundmanagement",
        "Comment": "Command Fund Management System"
      }
    }
  }
}